syntax on

" remaps
let mapleader = "'"
inoremap <C-L> <Esc>
nnoremap <C-n> :nohl <CR>
nnoremap Y y$
nnoremap L $
nnoremap H ^
nnoremap dH d^
tnoremap <Esc> <C-\><C-n>
" move text
vnoremap J :m '>+1<CR>gv=gv
vnoremap K :m '<-2<CR>gv=gv
inoremap <C-j> <esc>:m .+1<CR>==
inoremap <C-k> <esc>:m .-2<CR>==
nnoremap <leader>k :m .-2<CR>==
nnoremap <leader>j :m .+1<CR>==

" editor settings
set number
set relativenumber
set autoindent
set expandtab
set tabstop=2 shiftwidth=2
set smarttab
set backspace=indent,eol,start
set hlsearch
set incsearch
set colorcolumn=100
set nowrap
set laststatus=2

"remove handicaps
noremap <Up> <nop>
noremap <Down> <nop>
noremap <Left> <nop>
noremap <Right> <nop>
noremap! <Up> <nop>
noremap! <Down> <nop>
noremap! <Left> <nop>
noremap! <Right> <nop>
